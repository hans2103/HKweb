{
  "name": "hkweb",
  "version": "1.0.0",
  "description": "website for HKweb",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hans2103/HKweb.git"
  },
  "keywords": [
    "HKweb",
    "Joomla",
    "Magento",
    "Teaching",
    "CSS3",
    "Fun"
  ],
  "scripts": {
    "clean": "rimraf dist/{css/*,js/*,images/*}",
    "lint-scss": "stylelint src/scss/*.scss --syntax scss || true",
    "scss": "node-sass --output-style expanded -o src/css src/scss",
    "autoprefixer": "postcss --no-map -u autoprefixer --autoprefixer.browsers '&gt; 3% in NL, ie 11' -r src/css/*",
    "cleancss:font": "mkdirp dist/css && cleancss --output dist/css/font.css -O2 restructureRules:on,mergeSemantically:on src/css/font.css",
    "cleancss:styles": "mkdirp dist/css && cleancss --output dist/css/styles.css -O2 restructureRules:on,mergeSemantically:on src/css/styles.css",
    "cleancss": "run-s cleancss:*",
    "icons": "mkdirp dist/images/icons && svgo -f src/images/icons -o dist/images/icons && svg-sprite-generate -d dist/images/icons -o dist/images/icons/sprite.svg",
    "imagemin": "imagemin src/images/* -o dist/images",
    "lint": "eslint src/js || true",
    "uglify": "mkdirp dist/js && uglifyjs src/js/*.js -m -o dist/js/app.js && uglifyjs src/js/*.js -m -c -o dist/js/app.min.js",
    "copy": "mkdirp public_html && cpx \"dist/**/*.{html,png,jpg,css,js,svg}\" public_html --watch",
    "serve": "browser-sync start --proxy hkweb.test --port 4593 --files \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:css": "run-s lint-scss scss autoprefixer cleancss",
    "build:js": "run-s lint uglify",
    "build:images": "run-s imagemin icons",
    "build:copy": "run-s copy",
    "build": "run-s build:*",
    "watch:css": "onchange \"src/scss\" -- run-s build:css",
    "watch:js": "onchange \"src/js\" -- run-s build:js",
    "watch:images": "onchange \"src/images\" -- run-s build:images",
    "watch:copy": "onchange \"src\" -- run-s build:copy",
    "watch": "run-p serve watch:*",
    "postinstall": "run-s build watch"
  },
  "author": "Hans Kuijpers",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hans2103/HKweb/issues"
  },
  "homepage": "https://github.com/hans2103/HKweb#readme",
  "dependencies": {
    "font-face": "^2.3.0",
    "illusion": "timble/illusion"
  },
  "devDependencies": {
    "autoprefixer": "^9.0.1",
    "browser-sync": "^2.24.6",
    "clean-css-cli": "^4.1.11",
    "cpx": "^1.5.0",
    "eslint": "^5.2.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "stylelint": "^9.4.0",
    "svg-sprite-generator": "^0.0.7",
    "svgo": "^1.0.5",
    "uglify-js": "^3.4.6"
  }
}
