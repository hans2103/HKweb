{
  "name": "hkweb",
  "version": "1.0.0",
  "description": "website for HKweb",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hans2103/HKweb.git"
  },
  "keywords": [
    "HKweb",
    "Joomla",
    "Magento",
    "Teaching",
    "CSS3",
    "Fun"
  ],
  "config": {
    "src": "src",
    "dist": "public_html",
    "port": "4593",
    "proxy": "hkweb.test",
    "percentage": "3%",
    "region": "NL"
  },
  "scripts": {
    "// GENERAL": " --- GENERAL ---",
    "reinstall": "rimraf ./node_modules && yarn install",
    "start": "run-s build watch",

    "// CSS": " --- CSS --- ",
    "scss": "node-sass --output-style expanded -o $npm_package_config_src/css $npm_package_config_src/scss",
    "autoprefixer": "postcss --no-map -u autoprefixer --autoprefixer.browsers '&gt; $npm_package_config_percentage in $npm_package_config_region, ie 11' -r $npm_package_config_src/css/*",
    "cleancss:font": "cleancss --output $npm_package_config_dist/css/font.css -O2 restructureRules:on,mergeSemantically:on $npm_package_config_src/css/font.css",
    "cleancss:styles": "cleancss --output $npm_package_config_dist/css/styles.css -O1 specialComments:none -O2 restructureRules:on,mergeSemantically:on $npm_package_config_src/css/styles.css",
    "cleancss": "run-s cleancss:*",

    "// JS": " --- JAVASCRIPT --- ",
    "uglify": "mkdirp $npm_package_config_dist/js && uglifyjs $npm_package_config_src/js/*.js -m -o $npm_package_config_dist/js/app.js && uglifyjs $npm_package_config_src/js/*.js -m -c -o $npm_package_config_dist/js/app.min.js",

    "// IMAGES": " --- IMAGES --- ",
    "icons": "svgo -f $npm_package_config_src/images/icons -o $npm_package_config_dist/images/icons && rimraf $npm_package_config_dist/images/icons/sprite.svg && svg-sprite-generate -d $npm_package_config_dist/images/icons -o $npm_package_config_dist/images/icons/sprite.svg",
    "imagemin": "imagemin-power -r $npm_package_config_src/images/* -o $npm_package_config_dist/images",

    "// BUILD(GENERIC)": " --- BUILD (GENERIC) --- ",
    "clean": "rimraf $npm_package_config_dist/{css/*,js/*,images/*}",
    "mkdirs": "mkdirp $npm_package_config_dist/js && mkdirp $npm_package_config_dist/css && mkdirp $npm_package_config_dist/images/icons",

    "// BUILD (DEVELOPMENT)": " --- BUILD (DEVELOPMENT) --- ",
    "prebuild": "npm run clean && npm run mkdirs",
    "build:css": "run-s lint-scss scss autoprefixer cleancss",
    "build:js": "run-s lint uglify",
    "build:images": "run-s imagemin icons",
    "build": "run-s build:*",

    "// LINTING & TESTING": " --- LINTING & TESTING --- ",
    "lint": "eslint $npm_package_config_src/js || true",
    "lint-scss": "stylelint $npm_package_config_src/scss/*.scss --syntax scss || true",
    "pretest": "npm run lint",

    "// SERVING": " --- SERVING --- ",
    "kill": "lsof -n -i:$npm_package_config_port | grep LISTEN | awk '{print $2}' | xargs kill -9",
    "preserve": "npm run build && npm run kill",
    "serve": "browser-sync start --proxy $npm_package_config_proxy --port $npm_package_config_port --files \"$npm_package_config_dist/css/*.css, $npm_package_config_dist/js/*.js, **/*.html, !node_modules/**/*.html\"",

    "// WATCHING": " --- WATCHING --- ",
    "watch:images": "onchange '$npm_package_config_src/images' -- run-s build:images",
    "watch:css": "onchange '$npm_package_config_src/scss' -- run-s build:css",
    "watch:js": "onchange '$npm_package_config_src/js' -- run-s build:js",
    "watch": "run-p serve watch:*"
  },
  "author": "Hans Kuijpers",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hans2103/HKweb/issues"
  },
  "homepage": "https://github.com/hans2103/HKweb#readme",
  "dependencies": {
  },
  "devDependencies": {
    "@fortawesome/fontawesome-pro": "^5.2.0",
    "autoprefixer": "9.0.2",
    "browser-sync": "^2.24.6",
    "clean-css-cli": "^4.1.11",
    "cpx": "^1.5.0",
    "eslint": "^5.2.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "font-face": "^2.3.1",
    "imagemin-power-cli": "^3.0.0",
    "illusion": "timble/illusion",
    "mkdirp": "^0.5.1",
    "node-normalize-scss": "^8.0.0",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "optimised-svgs": "perfectwebteam/optimised-svgs",
    "postcss-cli": "^6.0.0",
    "rimraf": "^2.6.2",
    "stylelint": "^9.4.0",
    "svg-sprite-generator": "^0.0.7",
    "svgo": "^1.0.5",
    "uglify-js": "^3.4.6"
  }
}
